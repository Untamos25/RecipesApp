<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleMainText12" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:textSize">@dimen/text_size_main</item>
        <item name="android:textColor">@color/main_text</item>
    </style>

    <style name="StyleMainText14" parent="StyleMainText12">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="StyleText14AllCaps" parent="StyleMainText14">
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleTitle" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="StyleTitle14" parent="StyleTitle">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="StyleTitle14Main" parent="StyleTitle14">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleTitle14Secondary" parent="StyleTitle14">
        <item name="android:textColor">@color/text_titles</item>
    </style>

    <style name="StyleTitle16" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat_alternates</item>
        <item name="android:textSize">@dimen/text_size_medium_bigger</item>
        <item name="android:textColor">@color/main_text_alternative</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="StyleTitle20" parent="StyleTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_titles</item>
    </style>

    <style name="StyleNavButton" parent="Widget.Material3.Button">
        <item name="android:textAppearance">@style/StyleTitle14</item>
        <item name="cornerRadius">@dimen/space_half</item>
        <item name="android:paddingHorizontal">@dimen/padding_horizontal</item>
    </style>

    <style name="StyleHeader">
        <item name="android:textAppearance">@style/StyleTitle20</item>
        <item name="android:background">@drawable/shape_rounded</item>
        <item name="android:padding">@dimen/padding_main</item>
    </style>

    <style name="styleSeekBar">
        <item name="android:progressDrawable">@drawable/shape_seekbar_progress</item>
        <item name="android:thumb">@drawable/shape_seekbar_thumb</item>
    </style>

</resources>